{% extends "@Annonce/Default/layout.html.twig" %}
{% block content %}

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Point de Locations</li>
                <li class="breadcrumb-item active"><a href="{{ path('Reservations') }}">Réservations</a></li>
                <li class="breadcrumb-item active"><a href="{{ path('Ajouter_Reservation/') }}">Ajouter</a></li>
            </ol>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">

                <a href="{{ path('Ajouter_Reservation/') }}"  type="button" class="btn btn-info "><i class="fa fa-plus-circle"></i> Ajouter</a>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ajouter Votre Réservation</h4>
                    <form method="post"  enctype="multipart/form-data">
                        {{ form_start(form) }}

                        <div class="form-group">
                            <label for="vel"  class="control-label">Vélos</label>
                            <select  id="vel" name="vel"   class="form-control" required>
                                {% for velo in velo %}
                                    <option value= "{{ velo.id }}" selected>{{ velo.matricule }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group ">
                            <label for="num"  class="control-label">Date debut</label>
                            <input class="form-control"   type="datetime-local" id="datel" name="datel" min="{{ "now"|date("m/d/Y") }}" max="2021-06-14T00:00"required>
                        </div>
                        <div class="form-group ">
                            <label for="num"  class="control-label">Date fin</label>
                            <input class="form-control"   type="datetime-local" id="datef" name="datef"  min="2018-06-07T00:00" max="2021-06-14T00:00"required>
                        </div>


                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>Ajouter</button>
                            <a type="button" class="btn btn-secondary" href="{{ path('Reservations') }}">Annuler</a>
                        </div>
                        {{ form_end (form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}